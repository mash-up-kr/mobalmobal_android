<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ModalComponent" />
    <style name="ModalComponent.ProfileHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ModalComponent.ProfileUser">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ModalComponent.ProfileUserPoint">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ModalComponent.ProfilePoint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModalComponent.ProfilePointCount">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModalComponent.ProfileDonationSummary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ModalComponent.ProfileDonationSummaryCount">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModalComponent.DonationDetailInfo">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#d8d8d8</item>
    </style>

    <style name="ModalComponent.DonationDetailInfoCount">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ModalComponent.DonationDetailInfoCurrentPrice">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7aff97</item>
    </style>

    <style name="ModalComponent.DonationDetailInfoFunding">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ModalComponent.DonationDetailEndDay">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="ModalComponent.DonationDetailPercent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ModalComponent.DonationDetailDday">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_6</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_corner</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/pink</item>
        <item name="colorSwitchThumbNormal">@color/bright_grey</item>
    </style>
</resources>
