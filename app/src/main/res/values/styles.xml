<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MobalComponent" />

    <style name="MobalComponent.LoadingView" parent="MobalComponent">
        <item name="indicator">@drawable/oval</item>
        <item name="indicatorTint">@color/white</item>
        <item name="indicatorRadius">6dp</item>
        <item name="indicatorPadding">8dp</item>
    </style>

    <style name="MobalComponent.ProfileUserPoint" parent="MobalComponent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MobalComponent.ProfileHeader" parent="MobalComponent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MobalComponent.ProfileUser" parent="MobalComponent">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MobalComponent.ProfilePoint" parent="MobalComponent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MobalComponent.ProfilePointCount" parent="MobalComponent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MobalComponent.ProfileDonationSummary" parent="MobalComponent">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MobalComponent.ProfileDonationSummaryCount" parent="MobalComponent">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MobalComponent.DonationDetailInfo" parent="MobalComponent">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#d8d8d8</item>
    </style>

    <style name="MobalComponent.DonationDetailInfoCount" parent="MobalComponent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="MobalComponent.DonationDetailInfoCurrentPrice" parent="MobalComponent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7aff97</item>
    </style>

    <style name="MobalComponent.DonationDetailInfoFunding" parent="MobalComponent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MobalComponent.DonationDetailEndDay" parent="MobalComponent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="MobalComponent.DonationDetailPercent" parent="MobalComponent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MobalComponent.DonationDetailDday" parent="MobalComponent">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_6</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_corner</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/pink</item>
        <item name="colorSwitchThumbNormal">@color/bright_grey</item>
    </style>
</resources>
